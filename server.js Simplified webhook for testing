const express = require('express');
const app = express();
const PORT = process.env.PORT || 3000;

app.use(express.json());

// Simple test webhook - just plays a message
app.post('/webhook', (req, res) => {
  console.log('Incoming call webhook triggered');
  console.log('Request body:', JSON.stringify(req.body, null, 2));
  
  const response = [
    {
      "verb": "say",
      "text": "Hello! This is a test from Jambonz. If you hear this, the connection is working!"
    },
    {
      "verb": "pause",
      "length": 2
    },
    {
      "verb": "hangup"
    }
  ];
  
  res.json(response);
});

app.get('/', (req, res) => {
  res.send('ElevenLabs Jambonz Webhook is running!');
});

app.post('/status', (req, res) => {
  console.log('Call status update:', req.body);
  res.sendStatus(200);
});

app.listen(PORT, () => {
  console.log(`Webhook server listening on port ${PORT}`);
});
